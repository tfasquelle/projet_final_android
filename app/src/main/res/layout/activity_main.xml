<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainActivity">

    <ImageView
        android:id="@+id/mainImage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mainTextSettings"
        android:src="@drawable/image_main" />



    <TextView
        android:id="@+id/mainTextSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/mainTextHistory"
        app:layout_constraintTop_toBottomOf="@id/mainImage"
        />

    <TextView
        android:id="@+id/mainTextHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/location_history"
        app:layout_constraintBottom_toBottomOf="@id/mainTextSettings"
        app:layout_constraintLeft_toRightOf="@id/mainTextSettings"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/mainTextSettings"
        />



</androidx.constraintlayout.widget.ConstraintLayout>